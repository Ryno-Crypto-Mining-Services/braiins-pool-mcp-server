# Braiins Pool MCP Server - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Node Environment
# =============================================================================
NODE_ENV=development

# =============================================================================
# Braiins Pool API Configuration
# =============================================================================
# Base URL for Braiins Pool API (default: https://pool.braiins.com/api/v1)
BRAIINS_API_BASE_URL=https://pool.braiins.com/api/v1

# Your Braiins Pool API token (REQUIRED in production)
# Generate at: https://pool.braiins.com/settings/access
BRAIINS_API_KEY=your_api_key_here
# Legacy variable name (still supported): BRAIINS_POOL_API_TOKEN

# =============================================================================
# Redis Configuration
# =============================================================================
# Redis connection URL (default: redis://localhost:6379)
REDIS_URL=redis://localhost:6379

# Enable/disable Redis caching (default: true)
# Set to false for development without Redis
REDIS_ENABLED=true

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: debug, info, warn, error (default: info)
LOG_LEVEL=info

# Log format: json (production), pretty (development)
LOG_FORMAT=pretty

# =============================================================================
# Rate Limiting Configuration
# =============================================================================
# Requests per second to Braiins API (default: 1)
RATE_LIMIT_RPS=1

# Burst size for rate limiter (default: 5)
RATE_LIMIT_BURST=5

# =============================================================================
# Request Configuration
# =============================================================================
# Request timeout in milliseconds (default: 30000)
REQUEST_TIMEOUT=30000

# Maximum retry attempts for failed requests (default: 3)
MAX_RETRIES=3

# Base delay for exponential backoff in ms (default: 1000)
RETRY_BASE_DELAY=1000
