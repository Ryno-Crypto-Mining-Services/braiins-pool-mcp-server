{
  "name": "braiins-pool-mcp-server",
  "version": "0.1.0",
  "description": "MCP server for Braiins Pool API - connects AI assistants to Bitcoin mining pool monitoring",
  "author": "RynoCrypto",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "braiins-pool-mcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prepare": "husky"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.6.0",
    "ioredis": "^5.8.2",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/ioredis": "^4.28.10",
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "ioredis-mock": "^8.13.1",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.7",
    "nock": "^14.0.10",
    "prettier": "^3.1.0",
    "tsup": "^8.0.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "vitest": "^4.0.16"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "braiins",
    "bitcoin",
    "mining",
    "pool",
    "ai",
    "claude"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/RynoCrypto/braiins-pool-mcp-server.git"
  },
  "bugs": {
    "url": "https://github.com/RynoCrypto/braiins-pool-mcp-server/issues"
  },
  "homepage": "https://github.com/RynoCrypto/braiins-pool-mcp-server#readme",
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "tests/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
